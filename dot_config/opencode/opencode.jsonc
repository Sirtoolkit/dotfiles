{
  "$schema": "https://opencode.ai/config.json",
  "theme": "gruvbox",
  "tui": {
    "scroll_speed": 2,
  },
  "autoupdate": true,
  "mcp": {
    "mgrep": {
      "type": "local",
      "command": [
        "mgrep",
        "mcp"
      ],
      "enabled": true
    },
    "firebase": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "firebase-tools@latest",
        "mcp"
      ],
      "enabled": true,
    },
    "next-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "next-devtools-mcp@latest",
        "mcp"
      ],
      "enabled": true,
    },
    "dart": {
      "type": "local",
      "command": [
        "dart",
        "mcp-server"
      ],
    },
  },
}
