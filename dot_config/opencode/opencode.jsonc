{
  "$schema": "https://opencode.ai/config.json",
  "theme": "gruvbox",
  "tui": {
    "scroll_speed": 2,
  },
  "autoupdate": true,
  "mcp": {
    "firebase": {
      "type": "local",
      "command": ["npx", "-y", "firebase-tools@latest", "mcp"],
      "enabled": true,
    },
    "next-devtools": {
      "type": "local",
      "command": ["npx", "-y", "next-devtools-mcp@latest", "mcp"],
      "enabled": true,
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "enabled": true,
    },
    "flutter-docs": {
      "type": "local",
      "command": ["npx", "-y", "flutter-mcp", "mcp"],
      "enabled": true,
    },
    "Framelink MCP for Figma": {
      "type": "local",
      "enabled": true,
      "command": [
        "-y",
        "figma-developer-mcp",
        "--figma-api-key=YOUR-KEY",
        "--stdio",
      ],
    },
  },
}
