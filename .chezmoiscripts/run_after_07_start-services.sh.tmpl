#!/bin/bash
# Activa los servicios de skhd y sketchybar si estÃ¡n instalados
set -e

if command -v skhd >/dev/null 2>&1; then
  echo "Activando skhd..."
  skhd --start-service || true
else
  echo "skhd no encontrado, saltando."
fi

if command -v aerospace >/dev/null 2>&1; then
  echo "Starting AeroSpace..."
  open -a AeroSpace &
  sleep 2
else
  echo "AeroSpace not found, skipping."
fi

if command -v sketchybar >/dev/null 2>&1; then
  echo "Activando sketchybar..."
  sketchybar --config ~/.config/sketchybar/sketchybarrc || true
  sketchybar --load-font font-hack-nerd-font || true
else
  echo "sketchybar no encontrado, saltando."
fi
